{
  "name": "hello",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/hello.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || ^18"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib/",
    "public/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "rm -rf packages/*/public packages/*/lib",
    "coverage": "pnpm -r run coverage",
    "lint": "eslint . --ext .json,.js,.jsx,.ts,.tsx",
    "reset": "rm -rf node_modules packages/*/node_modules",
    "serve": "dotenv -e .env.local -- pnpm --filter=@dev/app run serve",
    "start": "dotenv -e .env.local -- pnpm --filter=@dev/app run start",
    "update:latest": "pnpm -r up -i",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "type-coverage": "^2.26.0",
    "typescript": "^5.1.6"
  }
}
